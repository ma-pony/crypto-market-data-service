# Crypto Market Data Service - Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/market_data
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
OHLCV_CACHE_SIZE=500
TICKER_TTL_SECONDS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Retry Configuration
RETRY_MAX_ATTEMPTS=5

# Data Collection
GAP_FILL_ENABLED=true
GAP_FILL_DAYS=7

# YAML Configuration File (optional - for exchange configs)
CONFIG_FILE=config.yaml

# Exchange API Keys (use environment variables for sensitive data)
# BINANCE__API_KEY=your_api_key
# BINANCE__SECRET=your_secret
# OKX__API_KEY=your_api_key
# OKX__SECRET=your_secret
